{% trans_default_domain 'FOSUserBundle' %}


<div class="account-pages mt-5 mb-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="text-center">
                    <a href="index.html">
                        <span><img src="{{ asset('front/images/logo-dark.png') }}" alt="" height="22"></span>
                    </a>
                    <p class="text-muted mt-2 mb-4"></p>
                </div>
                <div class="card">

                    <div class="card-body p-4">

                        <div class="text-center mb-4">
                            <h4 class="text-uppercase mt-0">Inscription</h4>
                        </div>
                        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register' , 'novalidate': 'novalidate' }}) }}
                        {% if not form.vars.valid %}
                            {% for child in form.children %}
                                {%for error in child.vars.errors%}
                                    <div class="alert alert-danger" >
                                        <div class="alert-text"><a> {{error.message}} </a> </div>
                                    </div>
                                {%endfor%}
                            {%endfor%}
                        {%endif%}
                        <div class="form-group">
                            {{ form_label(form.email) }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control' , 'placeholder': 'form.email'|trans}}) }}

                        </div>
                        <div class="form-group">
                            {{ form_label(form.username) }}
                            {{ form_widget(form.username, {'attr': {'class': 'form-control' , 'placeholder': 'form.username'|trans }}) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.plainPassword.first) }}
                            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control' , 'placeholder': 'form.password'|trans }}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.plainPassword.second) }}
                            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control' , 'placeholder': 'form.password_confirmation'|trans }}) }}

                        </div>
                        <div class="form-group">
                            {{ form_label(form.prenom) }}
                            {{ form_widget(form.prenom, {'attr': {'class': 'form-control' , 'placeholder': 'Pr√©nom' }}) }}

                        </div>
                        <div class="form-group">
                            {{ form_label(form.nom) }}
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control' , 'placeholder': 'Nom' }}) }}

                        </div>
                        <div class="form-group">
                            {{ form_label(form.tel) }}
                            {{ form_widget(form.tel, {'attr': {'class': 'form-control' , 'placeholder': 'Telephone' }}) }}

                        </div>
                        <div class="form-group">
                            {{ form_label(form.cin) }}
                            {{ form_widget(form.cin, {'attr': {'class': 'form-control' , 'placeholder': 'CIN' }}) }}

                        </div>
                        <div class="form-group mb-0 text-center">
                            <input type="submit" class="btn btn-primary btn-block" value="{{ 'registration.submit'|trans }}"/>
                        </div>
                        {{ form_end(form) }}
                    </div> <!-- end card-body -->
                </div>
                <!-- end card -->

                <div class="row mt-3">
                    <div class="col-12 text-center">
                        <p class="text-muted">Already have account? <a href="{{ path("fos_user_security_login") }}" class="text-dark ml-1"><b>Sign In</b></a></p>
                    </div> <!-- end col -->
                </div>
                <!-- end row -->
            </div> <!-- end col -->
        </div>
        <!-- end row -->
    </div>
    <!-- end container -->
</div>