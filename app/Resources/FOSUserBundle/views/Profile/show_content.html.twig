{% trans_default_domain 'FOSUserBundle' %}

<div class="account-pages mt-5 mb-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="text-center">
                    <a href="">
                        <span></span>
                    </a>
                    <p class="text-muted mt-2 mb-4"></p>
                </div>
                <div class="card text-center">

                    <div class="card-body p-4">

                        <div class="mb-4">
                            <h4 class="text-uppercase mt-0">Profile</h4>
                        </div>

                        <div class="fos_user_user_show" >
                            <p> <b>{{ 'profile.show.username'|trans }} </b>: {{ user.username }}</p>
                            <p><b>{{ 'profile.show.email'|trans }} </b>: {{ user.email }}</p>
                            <p> <b>Prénom </b>: {{ user.prenom }}</p>
                            <p> <b>Nom </b>: {{ user.nom }}</p>
                            <p> <b>Telephone </b>: {{ user.tel }}</p>
                            <p> <b>CIN </b>: {{ user.cin }}</p>
                        </div>

                        <a href="{{ path("fos_user_profile_edit") }}" class="btn btn-block btn-pink waves-effect waves-light mt-3">Modifier Détails</a>
                        <a href="{{ path("fos_user_change_password") }}" class="btn btn-block btn-pink waves-effect waves-light mt-3">Modifier Mot de Passe</a>
                    </div> <!-- end card-body -->
                </div>
                <!-- end card -->

            </div> <!-- end col -->
        </div>
        <!-- end row -->
    </div>
    <!-- end container -->
</div>